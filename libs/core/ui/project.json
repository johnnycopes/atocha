{
  "name": "core-ui",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/core/ui/src",
  "prefix": "core",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/core/ui"],
      "options": {
        "jestConfig": "libs/core/ui/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/core/ui/**/*.ts", "libs/core/ui/**/*.html"]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4600,
        "configDir": "libs/core/ui/.storybook",
        "browserTarget": "core-ui:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputDir": "dist/storybook/core-ui",
        "configDir": "libs/core/ui/.storybook",
        "browserTarget": "core-ui:build-storybook",
        "styles": ["libs/core/ui/src/storybook.scss"],
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["scope:core", "type:ui"]
}
