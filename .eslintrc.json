{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "banTransitiveDependencies": true,
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:core",
                "onlyDependOnLibsWithTags": ["scope:core"]
              },
              {
                "sourceTag": "scope:globetrotter",
                "onlyDependOnLibsWithTags": ["scope:core", "scope:globetrotter"]
              },
              {
                "sourceTag": "scope:lorenzo",
                "onlyDependOnLibsWithTags": ["scope:core", "scope:lorenzo"]
              },
              {
                "sourceTag": "scope:menu-matriarch",
                "onlyDependOnLibsWithTags": [
                  "scope:core",
                  "scope:menu-matriarch"
                ]
              },
              {
                "sourceTag": "scope:spirit-islander",
                "onlyDependOnLibsWithTags": [
                  "scope:core",
                  "scope:spirit-islander"
                ]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:feature",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:util"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:feature",
                  "type:ui",
                  "type:util"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"],
                "bannedExternalImports": ["@angular/*"]
              }
            ]
          }
        ],
        "@typescript-eslint/no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_"
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ],
  "extends": [null, "plugin:storybook/recommended"]
}
