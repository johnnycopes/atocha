      "@atocha/core/util": ["libs/core/util/src/index.ts"],
      "@atocha/globetrotter/data-access": [
        "libs/globetrotter/data-access/src/index.ts"
      ],
      "@atocha/globetrotter/feature-explore": [
        "libs/globetrotter/feature-explore/src/index.ts"
      ],
      "@atocha/globetrotter/feature-learn": [
        "libs/globetrotter/feature-learn/src/index.ts"
      ],
      "@atocha/globetrotter/feature-shell": [
        "libs/globetrotter/feature-shell/src/index.ts"
      ],
      "@atocha/globetrotter/types": ["libs/globetrotter/types/src/index.ts"],
      "@atocha/globetrotter/ui": ["libs/globetrotter/ui/src/index.ts"],
      "@atocha/menu-matriarch/data-access": [
