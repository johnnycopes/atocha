{
  "name": "spirit-islander",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/spirit-islander/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/spirit-islander",
        "index": "apps/spirit-islander/src/index.html",
        "main": "apps/spirit-islander/src/main.ts",
        "polyfills": "apps/spirit-islander/src/polyfills.ts",
        "tsConfig": "apps/spirit-islander/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/spirit-islander/src/assets"],
        "styles": ["apps/spirit-islander/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/spirit-islander/src/environments/environment.ts",
              "with": "apps/spirit-islander/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "spirit-islander:build:production"
        },
        "development": {
          "browserTarget": "spirit-islander:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4500
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "spirit-islander:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/spirit-islander/**/*.ts",
          "apps/spirit-islander/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/spirit-islander"],
      "options": {
        "jestConfig": "apps/spirit-islander/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "nx build spirit-islander",
            "netlify deploy --prod --auth=${NETLIFY_AUTH_TOKEN} --site=${SPIRIT_ISLANDER_SITE_ID} --message='Via Nx command'"
          ]
        },
        "development": {
          "commands": [
            "nx build spirit-islander",
            "netlify deploy --auth=${NETLIFY_AUTH_TOKEN} --site=${SPIRIT_ISLANDER_SITE_ID} --message='Via Nx command'"
          ]
        }
      },
      "defaultConfiguration": "development"
    }
  },
  "tags": ["scope:spirit-islander", "type:app"]
}
